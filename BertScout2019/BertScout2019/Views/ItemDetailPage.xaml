<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BertScout2019.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Number:" FontSize="Medium" />
        <Label Text="{Binding Team.Number}" FontSize="Small"/>
        <Label Text="Name:" FontSize="Medium" />
        <Label Text="{Binding Team.Name}" FontSize="Small"/>
        <Label Text="Location:" FontSize="Medium" />
        <Label Text="{Binding Team.Location}" FontSize="Small"/>
    </StackLayout>
</ContentPage>